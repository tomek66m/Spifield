@model List<Spifield.Model.Location>

@{
    ViewData["Title"] = "Lista lokacji";
}

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th scope-="col">
                Nazwa lokacji
            </th>
            <th scope="col">
                Opis
            </th>
            <th scope="col">
                Wymagany Level
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Location" asp-action="LocationMonsters" asp-route-id="@item.LocationID">
                        @item.Name
                    </a>
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.ReuqiredLevel
                </td>
            </tr>
        }
    </tbody>
</table>
